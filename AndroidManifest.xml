<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_hardware"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- <uses-permission android:name="android.permission.DEVICE_POWER" /> -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.android_hardware.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.android_hardware.VideoActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.CameraActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.FlashLightActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.AudioRecordActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.BrightnessActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.DialActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.MusicActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.VibrateActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.sensor.SensorActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.GPSLocationActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.LEDLampActivity" >
        </activity>
        <activity android:name="com.example.android_hardware.HeadSetActivity" >
        </activity>

        <receiver android:name="com.example.android_hardware.MediaButtonReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" >
                </action>
            </intent-filter>
        </receiver>
    </application>

</manifest>